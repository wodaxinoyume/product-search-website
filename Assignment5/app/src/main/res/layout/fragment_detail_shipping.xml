<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailShippingFragment">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/SellerTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/truck" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text=" Sold By" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/sellerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:stretchColumns="0,1" >

            <TableRow android:id="@+id/line1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:text="Store Name"/>

                <TextView
                    android:id="@+id/value1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="3"
                    android:singleLine="true"
                    android:textColor="@android:color/holo_blue_dark"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:text=""/>
            </TableRow>

            <TableRow android:id="@+id/line2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:text="Feedback Score"/>

                <TextView
                    android:id="@+id/value2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:text=""/>
            </TableRow>

            <TableRow android:id="@+id/line3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:text="Popularity"/>

                <com.wssholmes.stark.circular_score.CircularScoreView
                    android:id="@+id/value3"
                    android:layout_height="26dp"
                    android:layout_width="0dp"
                    app:score="50"
                    app:setPrimaryColor="#FF0000"
                    app:setSecondaryColor="#808080"
                    app:setBackgroundColor="@color/white"
                    app:setTextColor="#000000"/>

            </TableRow>

            <TableRow android:id="@+id/line4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:text="Feedback Star"/>

                <ImageView
                    android:id="@+id/value4"
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_gravity="left"
                    android:src="@drawable/staroutline" />

            </TableRow>

        </TableLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/ShippingTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ferry" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text=" Shipping Info" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/shippingInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:stretchColumns="0,1" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/ReturnTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dumptruck" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="24dp"
                android:textStyle="bold"
                android:text=" Return Policy" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/returnPolicy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:stretchColumns="0,1" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progressComponent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="291dp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="140dp"
            android:layout_height="137dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="136dp"
            android:layout_marginTop="245dp"
            android:layout_marginEnd="135dp"
            android:layout_marginBottom="277dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="3000dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="240dp"
            android:text="Fetching Product Details ..."
            android:textColor="#000080"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>